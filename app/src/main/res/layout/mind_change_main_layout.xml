<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:background="@color/fragment_background"
        android:focusableInTouchMode="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="57dp" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/textMindChangeHeader"
            style="@style/TextView.Primary.Header"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageMainSettings"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Изменение мыслей" android:layout_marginEnd="24dp" android:layout_width="0dp"/>

    <RelativeLayout
            android:id="@+id/imageMainSettings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="52dp"
            android:layout_height="81dp"
            android:layout_marginBottom="-19dp">
        <ImageView
                android:src="@drawable/bar_icon_settings"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
            app:layout_constraintTop_toBottomOf="@+id/textMindChangeHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cardHomework"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
    >

        <RelativeLayout
                android:background="@color/card_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Выполнить домашнее задание"
                    android:textColor="@color/grey_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_secondary_size"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textDiarySituation"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
            android:id="@+id/relativeDayMonthYear"
            app:layout_constraintTop_toBottomOf="@+id/cardHomework"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="16dp">

        <TextView
                android:id="@+id/textDayMonthYear"
                android:text="ДД.ММ.ГГГГ"
                android:textStyle="bold"
                style="@style/TextView.Secondary"
                android:textSize="@dimen/text_middle"
                android:textColor="@color/secondary_text"
                android:layout_marginEnd="8dp"/>

        <ImageView
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textDayMonthYear"
                android:src="@drawable/ic_calendar"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/linearArrow"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/relativeDayMonthYear"
            app:layout_constraintBottom_toTopOf="@+id/textMindChangeNonSelectedDay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

        <ImageView
                android:background="@drawable/triangle_shape"
                android:layout_width="10dp"
                android:layout_height="5dp"/>
        <View
                android:layout_gravity="center"
                android:background="@color/grey_color"
                android:layout_width="2dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
            android:visibility="gone"
            android:text="В этот день вы не делали никаких записей"
            android:textColor="@color/grey_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintTop_toTopOf="@+id/linearArrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textSize="@dimen/text_middle"
            android:textStyle="bold"
            android:id="@+id/textMindChangeEmptyDay" app:layout_constraintVertical_bias="0.22000003"/>

    <TextView
            android:text="Укажите дату, чтобы увидеть ваши записи"
            android:textColor="@color/grey_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textSize="@dimen/text_middle"
            android:textStyle="bold"
            android:id="@+id/textMindChangeNonSelectedDay" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeDayMonthYear" app:layout_constraintVertical_bias="0.55"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerMindChangeThinks"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/RecyclerViewStyle" app:layout_constraintTop_toTopOf="@+id/linearArrow"
            android:layout_height="0dp" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:layout_width="0dp"/>

</android.support.constraint.ConstraintLayout>