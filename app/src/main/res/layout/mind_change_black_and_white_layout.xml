<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragment_background">

    <androidx.core.widget.NestedScrollView
            style="@style/ScrollViewStyle"
            android:layout_above="@+id/buttonAddNewThink"
            android:layout_alignParentTop="true">

        <LinearLayout
                android:id="@+id/linearBW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    style="@style/TextView.Primary.Header"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Черно-белое мышление" />

            <TextView
                    style="@style/TextView.Secondary"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:text="Ситуация:"
                    android:textColor="@color/second_header_text"
                    android:textStyle="bold" />

            <EditText
                    android:id="@+id/editBWSituation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="?attr/colorPrimary"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Ситуация"
                    android:inputType="textPersonName|textMultiLine"
                    android:maxLines="4"
                    android:minHeight="48dp"
                    android:textColor="@color/second_header_text" />

            <TextView
                    style="@style/TextView.Secondary"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Новая мысль:"
                    android:textColor="@color/second_header_text"
                    android:textStyle="bold" />

            <EditText
                    android:id="@+id/editBWThink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="?attr/colorPrimary"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Мысли"
                    android:inputType="textPersonName|textMultiLine"
                    android:maxLines="4"
                    android:minHeight="48dp"
                    android:textColor="@color/second_header_text" />

            <TextView
                    style="@style/TextView.Secondary"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Вы\u2000заметили\u2000у\u2000себя\u2000черно-белое\u2000мышление,\u2000это\u2000значит,\u2000что\u2000часто\u2000вы\u2000видите\u2000всего\u2000два\u2000варианта\u2000развития\u2000событий:\u2000либо\u2000так,\u2000либо\u2000эдак;\u2000либо\u2000хорошо,\u2000либо\u2000плохо;\u2000либо\u2000правильно,\u2000либо\u2000неправильно.\u2000Сегодня\u2000нам\u2000предстоит\u2000поиск\u2000промежуточных\u2000вариантов\u2000между\u2000этими\u2000полюсами.\nПеред\u2000вами\u2000окошки,\u2000соответствующие\u2000континууму\u2000от\u20000%\u2000до\u2000100%.\nЗапишите\u2000в\u2000графу\u2000100%\u2000-\u2000самый\u2000позитивный\u2000полюс,\u2000соответствующий\u2000вашей\u2000мысли.\nА\u2000в\u2000графу\u20000%\u2000-\u2000самый\u2000негативный\u2000полюс,\u2000соответствующий\u2000вашей\u2000установке.\nРазберу\u2000на\u2000примере\u2000двух\u2000мыслей:\n«Меня\u2000уволят\u2000из-за\u2000ошибки\u2000на\u2000работе»:\u20000%\u2000-\u2000ничего\u2000не\u2000заплатят,\u2000100%\u2000-\u2000все\u2000равно\u2000заплатят.\n«Я\u2000буду\u2000выглядеть\u2000дурой,\u2000если\u2000пойду\u2000выступать\u2000перед\u2000всеми»:\u20000%\u2000-\u2000«буду\u2000выглядеть\u2000дурой»,\u2000100%\u2000-\u2000«все\u2000пройдет\u2000хорошо,\u2000буду\u2000молодцом».».
"
                    android:textColor="@color/second_header_text"
                    android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerBW"
                    style="@style/RecyclerViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp" />

            <TextView
                    style="@style/TextView.Secondary"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="А теперь вам предстоит честно ответить на вопросы и согласно своим ответам внести промежуточные переменные, а может даже сместить записанные ранее полюса в окошко с другим процентом."
                    android:textColor="@color/second_header_text"
                    android:textStyle="bold" />

            <TextView
                    style="@style/TextView.Secondary"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Может ли быть что-то или кто-то, еще лучше, чем обозначенный вами 100% полюс? Например, могут ли вам заплатить не только зарплату, но ещё и дать премию. Может ли кто-то стать супер-молодцом и справиться еще лучше. Если это возможно, то сместите свой 100% полюс, ведь теперь у вас есть новые 100%"
                    android:textColor="@color/second_header_text"
                    android:textStyle="bold" />

            <TextView
                    style="@style/TextView.Secondary"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Есть ли варианты развития событий, которые будут не так хороши как 90% или 100%, но при этом будут явно выше 0%? Впишите их в соответствующие графы. Например, могут выплатить аванс за ту часть работы, которая уже сделана, даже если в ней были совершены ошибки."
                    android:textColor="@color/second_header_text"
                    android:textStyle="bold" />

            <TextView
                    style="@style/TextView.Secondary"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Может ли быть на земле что-либо хуже, чем выглядеть дурой? Может ли быть что-то или кто-то еще хуже, чем обозначенный вами 0% полюс? Например, могут ли с вас ещё и деньги потребовать в качестве неустойки? Может, вы даже знаете человека гораздо глупее? Если это возможно, то сместите свой 0% полюс, ведь теперь у вас есть новые 0%."
                    android:textColor="@color/second_header_text"
                    android:textStyle="bold" />

            <TextView
                    style="@style/TextView.Secondary"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Постарайтесь заполнить полностью этот континуум, чтобы увидеть, где на самом деле находится данная ситуация."
                    android:textColor="@color/second_header_text"
                    android:textStyle="bold" />

            <TextView
                    style="@style/TextView.Secondary"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Измените мысль так, чтобы она более реалистично оценивала ситуацию."
                    android:textColor="@color/second_header_text"
                    android:textStyle="bold" />

            <EditText
                    android:id="@+id/editNewThink"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="24dp"
                    android:ems="10"
                    android:hint="Новая мысль"
                    android:inputType="textPersonName|textMultiLine"
                    android:maxLines="4"
                    android:minHeight="48dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin" />

            <TextView
                    style="@style/TextView.Secondary"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Какую эмоцию вызывает новая мысль? Насколько она выражена в %?"
                    android:textColor="@color/second_header_text"
                    android:textStyle="bold" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/diary_emotions_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imageJoy"
                            android:layout_width="@dimen/emotion_icon_size"
                            android:layout_height="@dimen/emotion_icon_size"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/emotion_non_active_joy" />

                    <TextView
                            android:id="@+id/textJoy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="30%"
                            android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/diary_emotions_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imageSadness"
                            android:layout_width="@dimen/emotion_icon_size"
                            android:layout_height="@dimen/emotion_icon_size"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/emotion_non_active_sedness" />

                    <TextView
                            android:id="@+id/textSadness"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="30%"
                            android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/diary_emotions_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imageAnnoyance"
                            android:layout_width="@dimen/emotion_icon_size"
                            android:layout_height="@dimen/emotion_icon_size"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/emotion_non_active_annoyance" />

                    <TextView
                            android:id="@+id/textAnnoyance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="30%"
                            android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/diary_emotions_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imageAnxiety"
                            android:layout_width="@dimen/emotion_icon_size"
                            android:layout_height="@dimen/emotion_icon_size"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/emotion_non_active_anxiety" />

                    <TextView
                            android:id="@+id/textAnxiety"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="30%"
                            android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/diary_emotions_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imageDisgust"
                            android:layout_width="@dimen/emotion_icon_size"
                            android:layout_height="@dimen/emotion_icon_size"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/emotion_non_active_disgust" />

                    <TextView
                            android:id="@+id/textDisgust"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="30%"
                            android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/diary_emotions_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imageInterest"
                            android:layout_width="@dimen/emotion_icon_size"
                            android:layout_height="@dimen/emotion_icon_size"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/emotion_non_active_interest" />

                    <TextView
                            android:id="@+id/textInterest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="30%"
                            android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/diary_emotions_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imageGuilt"
                            android:layout_width="@dimen/emotion_icon_size"
                            android:layout_height="@dimen/emotion_icon_size"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/emotion_non_active_guilt" />

                    <TextView
                            android:id="@+id/textGuilt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="30%"
                            android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <ImageView
                            android:id="@+id/imageResentment"
                            android:layout_width="@dimen/emotion_icon_size"
                            android:layout_height="@dimen/emotion_icon_size"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/emotion_non_active_resentment" />

                    <TextView
                            android:id="@+id/textResentment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="30%"
                            android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin">

                <TextView
                        android:id="@+id/textBWEmotion"
                        style="@style/TextView.Secondary"
                        android:layout_alignParentStart="true"
                        android:text="Радость"
                        android:textColor="@android:color/black" />

                <TextView
                        android:id="@+id/textBWEmotionsPercent"
                        style="@style/TextView.Secondary"
                        android:layout_alignParentEnd="true"
                        android:text="70%"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
            </RelativeLayout>

            <SeekBar
                    android:id="@+id/seekBarBWEmotions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:max="100"
                    android:min="1"
                    android:theme="@style/SeekBarStyle" />

            <TextView
                    style="@style/TextView.Secondary"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Повторная запись новой мысли позволит вам лучше её запомнить."
                    android:textColor="@color/second_header_text"
                    android:textStyle="bold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
            android:id="@+id/buttonAddNewThink"
            style="@style/TextView.Button"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/rectangle_button"
            android:text="Внести новую мысль в дневник" />

</RelativeLayout>