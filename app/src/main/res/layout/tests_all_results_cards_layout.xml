<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@color/fragment_background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="false">

    <TextView
            style="@style/TextView.Primary"
            android:text="Шкала дисфункциональных отношений Вейсмана-Бека "
            android:textColor="@color/header_text"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:id="@+id/textAllResultsTestName"/>

    <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/grey_color"
            android:text="У вас пока здесь нет результатов"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/textAllResultsCardsEmpty"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerAllTestsResultsDays"
            style="@style/RecyclerViewStyle"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_below="@+id/textAllResultsTestName" android:layout_width="match_parent"/>

</RelativeLayout>
