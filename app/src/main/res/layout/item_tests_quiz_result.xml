<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/relativeQuizResult"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/textQuizResultMark"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="Вы набрали 101 балл"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/imageArrowOpening"
                style="@style/TextView.Secondary"/>
        
        <ImageView
                android:id="@+id/imageArrowOpening"
                android:background="@drawable/arrow_opening"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="14dp"
                android:layout_height="8dp"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/textQuizResultDescription"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black"
            android:visibility="gone"
            android:text="Поздравляем, у вас очень мало ошибок мышления."
            style="@style/TextView.Secondary"/>
</LinearLayout>