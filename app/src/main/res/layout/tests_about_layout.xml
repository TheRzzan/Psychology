<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:background="@color/fragment_background"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

    <ScrollView
            android:id="@+id/scrollTestsAbout"
            style="@style/ScrollViewStyle">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/textTestsAboutHeader"
                    style="@style/TextView.Primary"
                    android:textColor="@color/header_text"
                    android:layout_marginBottom="31dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="Немного о вас"/>

            <TextView
                    android:text="Электронная почта"
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <EditText
                    android:textColor="@color/grey_color"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:inputType="textEmailAddress|textMultiLine"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:hint="Email"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:ems="10"
                    style="@style/EditTextStyle"
                    android:id="@+id/editEmail"/>

            <TextView
                    android:text="Пол"
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <Button
                        android:id="@+id/buttonTestsAboutManSex"
                        android:textAllCaps="false"
                        android:drawableStart="@drawable/ic_sex_man"
                        android:background="@drawable/rectangle_button_white"
                        android:textColor="@color/man_color"
                        android:text="Мужчина"
                        android:layout_marginEnd="24dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:paddingEnd="24dp"
                        android:paddingStart="10dp"
                        android:textSize="@dimen/button_font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"/>

                <Button
                        android:id="@+id/buttonTestsAboutWomanSex"
                        android:textAllCaps="false"
                        android:drawableStart="@drawable/ic_sex_woman"
                        android:background="@drawable/rectangle_button_white"
                        android:textColor="@color/woman_color"
                        android:textSize="@dimen/button_font_size"
                        android:text="Женщина"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"/>
            </LinearLayout>

            <TextView
                    android:text="Возраст"
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <EditText
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        style="@style/EditTextStyle"
                        android:textColor="@color/grey_color"
                        android:textSize="17sp"
                        android:layout_width="74dp"
                        android:layout_height="43dp"
                        android:background="@drawable/rectangle_edit_text_with_shadow"
                        android:inputType="number"
                        android:ems="3"
                        android:id="@+id/editAge"/>

                <TextView
                        android:text="Лет"
                        android:textStyle="bold"
                        style="@style/TextView.Secondary"
                        android:textColor="@color/second_header_text"
                        android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                    android:text="Семейное положение"
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <Spinner
                    style="@style/SpinnerStyle"
                    android:textColor="@color/grey_color"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:minWidth="155dp"
                    android:minHeight="44dp" android:id="@+id/spinerMaritalStatus"/>

            <TextView
                    android:text="Образование"
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <Spinner
                    style="@style/SpinnerStyle"
                    android:textColor="@color/grey_color"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:minWidth="155dp"
                    android:minHeight="44dp" android:id="@+id/spinnerEducation"/>

            <TextView
                    android:text="Время пользования приложением"
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <EditText
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        style="@style/EditTextStyle"
                        android:textColor="@color/grey_color"
                        android:textSize="17sp"
                        android:layout_width="74dp"
                        android:layout_height="43dp"
                        android:background="@drawable/rectangle_edit_text_with_shadow"
                        android:inputType="number"
                        android:ems="3" android:id="@+id/editMonthOfUse"/>

                <TextView
                        android:text="Месяцев"
                        android:textStyle="bold"
                        style="@style/TextView.Secondary"
                        android:textColor="@color/second_header_text"
                        android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                    android:text="Частота использования этого приложения"
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <Spinner
                    style="@style/SpinnerStyle"
                    android:textColor="@color/grey_color"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:minWidth="155dp"
                    android:minHeight="44dp" android:id="@+id/spinnerFreqOfUs"/>

            <TextView
                    android:text="Получаете ли вы одновременно помощь психолога?"
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <Button
                        android:textAllCaps="false"
                        android:background="@drawable/rectangle_button_white"
                        android:textColor="@color/man_color"
                        android:text="Да"
                        android:layout_marginEnd="24dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/button_font_size"
                        android:layout_width="54dp"
                        android:layout_height="44dp" android:id="@+id/buttonYesPsycho"/>

                <Button
                        android:textAllCaps="false"
                        android:background="@drawable/rectangle_button_white"
                        android:textColor="@color/woman_color"
                        android:textSize="@dimen/button_font_size"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:text="Нет"
                        android:layout_width="54dp"
                        android:layout_height="44dp" android:id="@+id/buttonNoPsycho"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/textTherapyMonthsPsycho"
                    android:text="Сколько месяцев вы занимаетесь с психологом?"
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <LinearLayout
                    android:id="@+id/linearTherapyMonthsPsycho"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <EditText
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        style="@style/EditTextStyle"
                        android:textColor="@color/grey_color"
                        android:textSize="17sp"
                        android:layout_width="74dp"
                        android:layout_height="43dp"
                        android:background="@drawable/rectangle_edit_text_with_shadow"
                        android:inputType="number"
                        android:ems="3" android:id="@+id/editMonthOfTherapyPsycho"/>

                <TextView
                        android:text="Месяцев"
                        android:textStyle="bold"
                        style="@style/TextView.Secondary"
                        android:textColor="@color/second_header_text"
                        android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                    android:text="Получаете ли вы одновременно помощь психотерапевта?"
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <Button
                        android:textAllCaps="false"
                        android:background="@drawable/rectangle_button_white"
                        android:textColor="@color/man_color"
                        android:text="Да"
                        android:layout_marginEnd="24dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/button_font_size"
                        android:layout_width="54dp"
                        android:layout_height="44dp" android:id="@+id/buttonYes"/>

                <Button
                        android:textAllCaps="false"
                        android:background="@drawable/rectangle_button_white"
                        android:textColor="@color/woman_color"
                        android:textSize="@dimen/button_font_size"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:text="Нет"
                        android:layout_width="54dp"
                        android:layout_height="44dp" android:id="@+id/buttonNo"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/textTherapyMonths"
                    android:text="Сколько месяцев вы занимаетесь с психотерапевтом?"
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <LinearLayout
                    android:id="@+id/linearTherapyMonths"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <EditText
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        style="@style/EditTextStyle"
                        android:textColor="@color/grey_color"
                        android:textSize="17sp"
                        android:layout_width="74dp"
                        android:layout_height="43dp"
                        android:background="@drawable/rectangle_edit_text_with_shadow"
                        android:inputType="number"
                        android:ems="3" android:id="@+id/editMonthOfTherapy"/>

                <TextView
                        android:text="Месяцев"
                        android:textStyle="bold"
                        style="@style/TextView.Secondary"
                        android:textColor="@color/second_header_text"
                        android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                    android:text="Насколько часто вы получаете консультации у специалиста?"
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <Spinner
                    style="@style/SpinnerStyle"
                    android:textColor="@color/grey_color"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:minWidth="155dp"
                    android:minHeight="44dp" android:id="@+id/spinnerFreqOfTherapy"/>

            <TextView
                    android:text="Применяете ли вы в настоящий момент медикаменты для восстановления психического здоровья? Можно выбрать несколько вариантов."
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <CheckBox
                    style="@style/CheckBoxStyle"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="Нет"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkNo"/>

            <CheckBox
                    style="@style/CheckBoxStyle"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="Принимаю антидепрессанты"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkAnt"/>

            <CheckBox
                    style="@style/CheckBoxStyle"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="Принимаю транквизаторы"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkTrank"/>

            <CheckBox
                    style="@style/CheckBoxStyle"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="Принимаю нейролептики"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkNeiro"/>

            <CheckBox
                    style="@style/CheckBoxStyle"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="Принимаю нормотимики"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkNormo"/>

            <CheckBox
                    style="@style/CheckBoxStyle"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="Принимаю другие лекарства"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/checkAnother"/>

            <EditText
                    android:visibility="gone"
                    android:textColor="@color/grey_color"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:inputType="textPersonName|textMultiLine"
                    android:maxLines="4"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:hint="Уточните какие"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:ems="10"
                    style="@style/EditTextStyle"
                    android:id="@+id/editClarification"/>

            <TextView
                    android:text="Информированное согласие на анонимное участие в исследовании эффективности приложения."
                    android:textStyle="bold"
                    style="@style/TextView.Secondary"
                    android:textColor="@color/second_header_text"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <Button
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@drawable/rectangle_button_white"
                        android:textColor="@color/man_color"
                        android:text="Согласен"
                        android:layout_marginEnd="24dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:textSize="@dimen/button_font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp" android:id="@+id/buttonAgree"/>

                <Button
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@drawable/rectangle_button_white"
                        android:textColor="@color/woman_color"
                        android:textSize="@dimen/button_font_size"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:text="Отказываюсь"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp" android:id="@+id/buttonDisagree"/>
            </LinearLayout>

            <Button
                    android:id="@+id/buttonTestsAboutSave"
                    android:text="Сохранить"
                    style="@style/TextView.Button"
                    android:background="@drawable/rectangle_button"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>